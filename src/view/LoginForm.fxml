            <image>
                <Image url="@assets/login.png" />
            </image>
        </ImageView>
        <Label layoutX="161.0" layoutY="37.0" text="Welcome to Student Attendance System">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Label layoutX="182.0" layoutY="64.0" text="Please enter your login credentials to log in" />
        <TextField fx:id="txtUserName" alignment="CENTER" layoutX="181.0" layoutY="104.0" prefHeight="26.0" prefWidth="284.0" promptText="Username" />
        <PasswordField fx:id="txtPassword" alignment="CENTER" layoutX="179.0" layoutY="142.0" prefHeight="26.0" prefWidth="284.0" promptText="Password" />
        <Button fx:id="btnSignIn" defaultButton="true" layoutX="278.0" layoutY="187.0" mnemonicParsing="false" onAction="#btnSignIn_OnAction" prefWidth="86.0" text="Sign In" />
    </children>
